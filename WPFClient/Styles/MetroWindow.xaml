<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    options:Freeze="False">

    <Style
        x:Key="CustomMetroWindow"
        BasedOn="{StaticResource {x:Type controls:MetroWindow}}"
        TargetType="{x:Type controls:MetroWindow}">
        <Setter Property="ShowTitleBar" Value="True" />
        <Setter Property="Height" Value="450" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}"/>
    </Style>
    <ImageBrush x:Key="BackgroundBrush" ImageSource="pack://application:,,,/Assets/LightBackground.png" options:Freeze="False"/>
    <ImageBrush x:Key="DarkBackgroundBrush" ImageSource="pack://application:,,,/Assets/DarkBackground.png" options:Freeze="False"/>
    <ImageBrush x:Key="LightBackgroundBrush" ImageSource="pack://application:,,,/Assets/LightBackground.png" options:Freeze="False"/>

</ResourceDictionary>
